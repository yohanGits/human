/* 전역 */
.img-box {border: 1px solid black;}
ul {list-style: none; padding: 0;}
section {width: 700px; float: left;}
aside {width: 200px; float: right;}
body {margin: 0;}
@font-face {
    font-family: 'BBTreeGB';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_nine_@1.1/BBTreeGB.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}
html { background: url(../images/skystar.png) no-repeat 50% 50% fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; }
/* 헤더 */
header > * > *, main {width: 987px; margin: 0 auto;}
.header{background: url(../images/star.png) repeat;}
header > div {background: coral; border-bottom: 3px solid #777; padding: 30px 0;}
header > div .img-box {width: 150px; height: 100px; margin-left: 30px; border: none;}
header > div > div {position: relative;}
header > div p {position: absolute; top: 60px; right: 40px; bottom: 10px; font-size:30px; color: #fff; font-weight:bold; font-family: 'Noto Serif KR', serif;}

header > nav {background-color: #fff; border-bottom: 2px solid #b8c2e3;  clear: both; margin: 0 150px;}
nav ul li {display: inline-block; padding:20px;}
.navi ul li a{color:black; text-decoration: none; margin: 10px; letter-spacing: 1px; font-weight: bold;}
.navi a:link, .navi a:visited{font-size: 14px; padding: 10px; text-decoration: none;}
.navi a:hover, .navi a:focus{background-color: #222; color: #fff; border-radius: 10px; transition: 0.8s;}
.navi a:active{background-color: #f00;}

/* 푸터 */
footer {clear: both; padding: 70px; margin: 0 150px; text-align: center; background-color:#ffffff;  font-size:14px; color: #5e5c5c; border-top: 1px solid #b8c2e3; position: relative;}
footer address{position: absolute; top: 40px; bottom: 10px; left: 370px; line-height: 10px;}

/* index */
.index {padding-top: 20px;}
.index section, .index aside {padding:20px;}
.index section h1{height: 10px; text-indent: -9999px; margin: 0;}
.index section article .img-box {height: 150px;}
.index section > h2 {clear: both;}
.index section ul.width40 li {width: 330px; float: left; margin: 10px;}
.index section ul.width40 li .img-box {height: 80px; width: 80px; float: left;}
.index section ul.width40 li div {width: 242px; float: right;}
.index section ul.width40 li div * {margin: 0;}
.index section ul::after {content: ''; display:  block; clear: both;}

.index .width100 {text-align: center;}
.index .width100 .img-box {height: 150px;}

.index aside input[type='submit'] {padding: 20px 50px;}

/* login */
.login form{width: 400px; margin: 0 auto;}
.login h4{margin: 20px 0 10px;}
.login input[type="text"], .login input[type="password"]{padding:8px; width: 100%; box-sizing: border-box;}
.login button {width: 100%; box-sizing: border-box; padding: 10px;}

