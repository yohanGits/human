<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.johnco.mapper.ReplyMapper">
	<insert id="insert">
	INSERT INTO TBL_REPLY (RNO, BNO, REPLY, REPLYER)
	VALUES (SEQ_REPLY.NEXTVAL, #{bno}, #{reply}, #{replyer})
	</insert>
	
	<select id="read" resultType="reply">
	SELECT * FROM TBL_REPLY WHERE RNO = #{rno}
	</select>
	
	<update id="update">
	UPDATE TBL_REPLY SET
	REPLY = #{reply}, 
	REPLYER = #{replyer}, 
	UPDATEDATE = SYSDATE
	WHERE RNO = #{rno}
	</update>

	<delete id="delete">
	DELETE TBL_REPLY WHERE RNO = #{rno}
	</delete>
	
	<select id="getList" resultType="reply">
	SELECT /*+ INDEX(TR IDX_REPLY) */ * 
	FROM TBL_REPLY TR
	WHERE BNO = #{bno}
	<if test="cri.lastRno != 0"> 
	AND RNO &lt; #{cri.lastRno}
	</if>
	AND ROWNUM &lt;= #{cri.amount}
	</select>
</mapper>